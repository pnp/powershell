{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File"
                ]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "pwsh",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build with nugets",
            "type": "shell",
            "command": "${cwd}/build/Build-Debug.ps1",
            "problemMatcher":"$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with local copy of PnP Framework/PnP Core SDK",
            "type": "shell",
            "command": "${cwd}/build/Build-Debug.ps1",
            "problemMatcher": "$msCompile",
            "args": [
                "-LocalPnPFramework",
                "-LocalPnPCore"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with local copy of PnP Framework",
            "type": "shell",
            "command": "${cwd}/build/Build-Debug.ps1",
            "problemMatcher": "$msCompile",
            "args": [
                "-LocalPnPFramework",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build with local copy of PnP Core SDK",
            "type": "shell",
            "command": "${cwd}/build/Build-Debug.ps1",
            "problemMatcher": "$msCompile",
            "args": [
                "-LocalPnPCore",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}